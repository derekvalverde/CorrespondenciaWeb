@model clsCarrito

<form asp-controller="Home" asp-action="Adicionar" method="POST">
    <div class="modal-header text-right">
        <h5 class="modal-title text-center texto3" id="nomProdModal">Este codigo no se ve se solapa con el script del _Layout.cshtml</h5>
        <button type="button" class="close text-right" style="background-color:#48cfb4; color:white; width:60px; height:60px; border:3px solid #48cfb4; border-color: #48cfb4;" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="text-center">


            <div id="imagediv" style="width:65px; height:65px; margin-top:20px; margin-left:28px; position:absolute; z-index:1;">

            </div>

            <h6 class="text-white" style="margin-left:75px; margin-top:10px; position:absolute; z-index:1;" id="porcentajeDescuentoModal"></h6>

            <img id="imgAnadirModal" />

        </div>

        <div class="form-inline">
            <h6 class="texto3" id="precioModal">Este codigo no se ve se solapa con el script del _Layout.cshtml</h6>
        </div>
        <div>

            <h6 class="textoDescuento" id="descuentoModal"></h6>
        </div>
        <div class="form-inline">
            <h6 class="texto3">Cantidad:</h6>

            <input name="cantidad" id="cantidad" class="form-control col-3 ml-2" type="number" value="1" min="1" placeholder=" " aria-label="Cantidad">

            <h6 class="textoalert ml-1" id="tieneProdStock"></h6>
        </div>

    </div>
    <input type="hidden" id="CodigoProdH" name="CodigoProdH" />
    <input type="hidden" id="NombreProdH" name="NombreProdH" />
    <input type="hidden" id="PrecioProdH" name="PrecioProdH" />
    <input type="hidden" id="OrigenH" name="OrigenH" />
    <input type="hidden" id="SectorH" name="SectorH" />
    <input type="hidden" id="MavLineaH" name="MavLineaH" />
    <input type="hidden" id="MavFamiliaH" name="MavFamiliaH" />
    <input type="hidden" id="MavOrigenH" name="MavOrigenH" />
    <input type="hidden" id="madDescuentoH" name="madDescuentoH" />
    <input type="hidden" id="matImagenH" name="matImagenH" />
    <input type="hidden" id="cantidadMaximaH" name="cantidadMaximaH" />
    <input type="hidden" id="cantidadCompradaH" name="cantidadCompradaH" />
    <input type="hidden" id="existenciaH" name="existenciaH" />



    <div class="modal-footer justify-content-center">
        <div class="text-center">
            <button type="submit" class="btn btn-primary2 mt-auto mb-3">Adicionar</button>
        </div>
    </div>

</form>


