@model clsCarrito


<form asp-controller="Home" asp-action="Editar" method="POST">
    <div class="modal-header justify-content-center">
        <h5 class="modal-title text-center texto3" id="nomProdModal">Este codigo no se ve se solapa con el script del _Layout.cshtml</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body ">
        <div class="text-center">
            <img id="imgAnadirModal" />
        </div>

        <div class="form-inline">
            <h5 class="texto3" id="precioModal">Este codigo no se ve se solapa con el script del _Layout.cshtml</h5>
        </div>
        <div class="form-inline">
            <h6 class="texto3">Cantidad:</h6>

            <input name="cantidad" id="cantidad" class="form-control col-3 ml-2" type="number" value="1" min="1" placeholder=" " aria-label="Cantidad">

        </div>

    </div>
    <input type="hidden" id="CodigoProdH" name="CodigoProdH" />
    <input type="hidden" id="cantidadMaximaH" name="cantidadMaximaH" />
    <input type="hidden" id="cantidadCompradaH" name="cantidadCompradaH" />

    <div class="modal-footer justify-content-center">
        <div class="justify-content-center">
            <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
    </div>
</form>