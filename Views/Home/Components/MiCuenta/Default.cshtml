@model clsClienteVentaCliCodigoResponse

<div class="modal-header text-right">
    <h4 class="modal-title texto2"><strong class="text-center">Mis Datos</strong></h4>
    <button type="button" class="close text-right" style="background-color:#48cfb4; color:white; width:60px; height:60px; border:3px solid #48cfb4; border-color: #48cfb4;" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="table bg-tabla">
    <table>

        <tbody class="text-left">
            <tr>
                <td class="texto3" style="width:auto;">Codigo:</td>
                <td class="textoMicuenta">@Model.cliCodigo</td>
            </tr>

            <tr>
                <td class="texto3">Nombre:</td>
                <td class="textoMicuenta">@Model.cliNombreComercial.</td>
            </tr>
            <tr>
                <td class="texto3">Direccion:</td>
                <td class="textoMicuenta">@Model.cliDireccionComercial</td>
            </tr>
            <tr>
                <td class="texto3">Nit:</td>
                <td class="textoMicuenta">@Model.cliIdentificacionNumero</td>
            </tr>
            <tr>
                <td class="texto3">Email:</td>
                <td class="textoMicuenta">@Model.cliEmail</td>
            </tr>
            <tr>
                <td class="texto3">Telefono:</td>
                <td class="textoMicuenta">@Model.cliTelefono</td>
            </tr>
            <tr>
                <td class="texto3" style="width:150px;">Forma de Pago:</td>
                <td class="textoMicuenta">@Model.clvFormaPago</td>
            </tr>


        </tbody>
    </table>


</div>
<div class="modal-footer">
    <div class="text-center mr-1">
        <a class="btn btn-primary2 mb-auto mr-5" asp-controller="Home" asp-action="CerrarSesion"><strong>Cerrar Sesion</strong></a>
        <!--<a class=" btn btn-lg mr-1 text-light" data-toggle="modal" data-target="#modalActualizacionDatos"><small>Actualizacion de Datos</small></a>-->

        <a class="btn btn-lg text-light" data-toggle="modal" data-target="#modalPassword"><small>Cambiar Clave</small></a>
    </div>
</div>


<!-- MODAL CAMBIO DE PASSWORD -->
<div class="modal fade" id="modalPassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="margin-left:60px; margin-top:70px;">
    <div class="modal-dialog">
        <div class="col-6 main-section">
            <div class="modal-content" style="width: 300px; height: 350px;">
                @await Component.InvokeAsync("Password")
            </div>
        </div>
    </div>
</div>
<!-- FIN MODAL PASSWORD  -->
<!--MODAL ACTUALIZACION DE DATOS  -->
<div class="modal fade" id="modalActualizacionDatos" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="margin-top:0px;">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content justify-content-center" style="width:2000px; height:2900px;">
            @await Component.InvokeAsync("ActualizacionDatos")
        </div>
    </div>
</div>
<!-- FIN MODAL ACTUALIZACION DE DATOS  -->
